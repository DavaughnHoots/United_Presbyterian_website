<div class="max-w-md mx-auto text-center">
  <div class="module-card p-12">
    <div class="mb-6">
      <i class="fas fa-shield-alt text-6xl text-red-400"></i>
    </div>
    <h1 class="text-3xl font-bold mb-4" style="color: var(--text-primary);">Access Denied</h1>
    <p class="text-gray-600 mb-8"><%= typeof message !== 'undefined' ? message : 'You do not have permission to access this page.' %></p>
    
    <div class="space-y-3">
      <a href="/" class="btn-primary inline-block">
        <i class="fas fa-home mr-2"></i>
        Go to Homepage
      </a>
      
      <% if (!user) { %>
        <div class="mt-4">
          <p class="text-sm text-gray-600 mb-2">Need to sign in?</p>
          <a href="/auth/login" class="text-sky-blue hover:underline">Login to your account</a>
        </div>
      <% } %>
    </div>
  </div>
</div>