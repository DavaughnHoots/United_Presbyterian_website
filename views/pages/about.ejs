<div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-center mb-8">About <%= churchName %></h1>
    
    <div class="prose prose-lg max-w-none">
        <p class="text-gray-700 mb-6">
            <%= welcomeMessage %>
        </p>
        
        <div class="grid md:grid-cols-2 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="text-2xl font-semibold mb-4">Our Mission</h2>
                <p class="text-gray-700">
                    To glorify God by making disciples of Jesus Christ who worship passionately, 
                    love unconditionally, and serve compassionately.
                </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="text-2xl font-semibold mb-4">Our Vision</h2>
                <p class="text-gray-700">
                    To be a Christ-centered community that transforms lives through the power of 
                    God's love and grace.
                </p>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6 mb-8">
            <h2 class="text-2xl font-semibold mb-4">Service Times</h2>
            <div class="space-y-2">
                <% if (serviceTimes) { %>
                    <% serviceTimes.split('\n').forEach(time => { %>
                        <p><%= time %></p>
                    <% }) %>
                <% } else { %>
                    <p>Please contact us for service times.</p>
                <% } %>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-2xl font-semibold mb-4">Contact Us</h2>
            <% if (churchAddress) { %>
                <p class="text-gray-700 mb-2">
                    <strong>Address:</strong><br>
                    <% churchAddress.split('\n').forEach(line => { %>
                        <%= line %><br>
                    <% }) %>
                </p>
            <% } %>
            <% if (phoneNumber) { %>
                <p class="text-gray-700 mb-2">
                    <strong>Phone:</strong> <a href="tel:<%= phoneNumber.replace(/\D/g, '') %>" class="text-blue-600 hover:underline"><%= phoneNumber %></a>
                </p>
            <% } %>
            <% if (contactEmail) { %>
                <p class="text-gray-700">
                    <strong>Email:</strong> <a href="mailto:<%= contactEmail %>" class="text-blue-600 hover:underline"><%= contactEmail %></a>
                </p>
            <% } %>
        </div>
    </div>
</div>
