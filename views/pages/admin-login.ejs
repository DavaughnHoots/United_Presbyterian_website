<div class="max-w-md mx-auto">
    <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-purple-100 rounded-full mb-4">
            <i class="fas fa-shield-alt text-3xl text-purple-600"></i>
        </div>
        <h1 class="text-3xl font-bold">Admin Authentication</h1>
        <p class="text-gray-600 mt-2">Additional security required for admin accounts</p>
    </div>
    
    <% if (error) { %>
        <div class="bg-red-50 border border-red-300 text-red-700 px-4 py-3 rounded-lg mb-4">
            <% if (error === 'missing_password') { %>
                Please enter your password.
            <% } else if (error === 'Invalid password') { %>
                <i class="fas fa-exclamation-circle mr-2"></i>
                Incorrect password. Please try again.
            <% } else { %>
                <%= error %>
            <% } %>
        </div>
    <% } %>
    
    <form action="/auth/admin-login" method="POST" class="module-card">
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2">
                Admin Email
            </label>
            <div class="bg-gray-100 px-4 py-3 rounded-lg text-gray-700 font-mono">
                <%= email %>
            </div>
        </div>
        
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                Admin Password
            </label>
            <input 
                class="shadow appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" 
                id="password" 
                type="password" 
                name="password"
                placeholder="Enter your admin password"
                required
                autofocus
            >
            <p class="text-xs text-gray-600 mt-2">
                <i class="fas fa-info-circle mr-1"></i>
                Admin accounts require password authentication for security
            </p>
        </div>
        
        <button 
            class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 ease-in-out transform hover:scale-105 shadow-lg" 
            type="submit"
        >
            <i class="fas fa-sign-in-alt mr-2"></i>
            Authenticate
        </button>
        
        <div class="mt-6 text-center">
            <a href="/auth/login" class="text-sm text-gray-600 hover:text-gray-800">
                <i class="fas fa-arrow-left mr-1"></i>
                Back to login
            </a>
        </div>
    </form>
    
    <!-- Security Notice -->
    <div class="mt-8 module-card bg-purple-50">
        <div class="flex items-start">
            <i class="fas fa-lock text-purple-600 mt-1 mr-3"></i>
            <div>
                <h3 class="font-semibold text-purple-900 mb-1">Enhanced Security</h3>
                <p class="text-sm text-purple-700">
                    Admin accounts have access to sensitive church data and moderation tools. 
                    Password protection ensures only authorized personnel can access these features.
                </p>
            </div>
        </div>
    </div>
</div>