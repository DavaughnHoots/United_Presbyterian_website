<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
            <i class="fas fa-chart-line text-red-600"></i>
            Analytics Dashboard
        </h1>
        <p class="text-gray-600 mt-2">Track user engagement and spiritual growth metrics</p>
    </div>
    
    <!-- Key Metrics Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <!-- Total Users -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600">Total Users</p>
                    <p class="text-2xl font-bold text-gray-800"><%= stats.totalUsers %></p>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-users text-blue-600"></i>
                </div>
            </div>
        </div>
        
        <!-- Active Users -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600">Active Users (30d)</p>
                    <p class="text-2xl font-bold text-gray-800"><%= stats.activeUsers %></p>
                    <p class="text-xs text-green-600"><%= stats.engagementRate %>% engagement</p>
                </div>
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-user-check text-green-600"></i>
                </div>
            </div>
        </div>
        
        <!-- Users with Streaks -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600">Users with Streaks</p>
                    <p class="text-2xl font-bold text-gray-800"><%= stats.usersWithStreaks %></p>
                    <p class="text-xs text-orange-600">Avg: <%= Math.round(stats.avgStreak) %> days</p>
                </div>
                <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-fire text-orange-600"></i>
                </div>
            </div>
        </div>
        
        <!-- Total Amens -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600">Total Amens</p>
                    <p class="text-2xl font-bold text-gray-800"><%= stats.totalAmens %></p>
                    <p class="text-xs text-purple-600"><%= stats.uniqueAmenUsers %> unique users</p>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-praying-hands text-purple-600"></i>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Engagement Metrics Row -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <!-- Greeting Interactions -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                <i class="fas fa-hand-wave text-yellow-600"></i>
                Greeting Interactions
            </h3>
            <div class="space-y-3">
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">Total Clicks</span>
                    <span class="font-bold text-gray-800"><%= stats.greetingClicks %></span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">Today</span>
                    <span class="font-bold text-green-600"><%= stats.todayGreetings %></span>
                </div>
            </div>
        </div>
        
        <!-- Content Completions -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                <i class="fas fa-check-circle text-green-600"></i>
                Content Completions
            </h3>
            <div class="space-y-3">
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">Total Completions</span>
                    <span class="font-bold text-gray-800"><%= stats.totalCompletions %></span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">Unique Users</span>
                    <span class="font-bold text-blue-600"><%= stats.uniqueCompletingUsers %></span>
                </div>
            </div>
        </div>
        
        <!-- Streak Records -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                <i class="fas fa-trophy text-amber-600"></i>
                Streak Records
            </h3>
            <div class="space-y-3">
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">Average Streak</span>
                    <span class="font-bold text-gray-800"><%= Math.round(stats.avgStreak) %> days</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">Longest Streak</span>
                    <span class="font-bold text-amber-600"><%= stats.maxStreak %> days</span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Daily Active Users Chart -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold mb-4">Daily Active Users (Last 7 Days)</h3>
            <canvas id="dauChart" height="150"></canvas>
        </div>
        
        <!-- Weekly Activity Chart -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold mb-4">Weekly Activity Trend</h3>
            <canvas id="weeklyChart" height="150"></canvas>
        </div>
    </div>
    
    <!-- Popular Content Table -->
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">Most Popular Content (by Amens)</h3>
        <% if (popularContent && popularContent.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead>
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Content Type
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Content ID
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Amen Count
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% popularContent.forEach(content => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                           <%= content.contentType === 'scripture_reading' ? 'bg-blue-100 text-blue-800' : 
                                               content.contentType === 'hymn' ? 'bg-green-100 text-green-800' : 
                                               content.contentType === 'prayer' ? 'bg-purple-100 text-purple-800' : 
                                               'bg-gray-100 text-gray-800' %>">
                                        <%= content.contentType.replace('_', ' ') %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    #<%= content.contentId %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center gap-2">
                                        <i class="fas fa-praying-hands text-purple-600"></i>
                                        <span class="text-sm font-medium text-gray-900">
                                            <%= content.dataValues.amenCount %>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-gray-500 text-center py-4">No content engagement data yet</p>
        <% } %>
    </div>
    
    <!-- Back Button -->
    <div class="mt-6">
        <a href="/admin" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition">
            <i class="fas fa-arrow-left"></i>
            Back to Dashboard
        </a>
    </div>
</div>

<!-- Chart.js Scripts -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Prepare data for charts
const dauData = <%- JSON.stringify(dauData || []) %>;
const weeklyActivity = <%- JSON.stringify(weeklyActivity || []) %>;

// Daily Active Users Chart
const dauCtx = document.getElementById('dauChart').getContext('2d');
new Chart(dauCtx, {
    type: 'line',
    data: {
        labels: dauData.map(d => {
            const date = new Date(d.date);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
        }),
        datasets: [{
            label: 'Active Users',
            data: dauData.map(d => d.count),
            borderColor: 'rgb(59, 130, 246)',
            backgroundColor: 'rgba(59, 130, 246, 0.1)',
            tension: 0.3
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            }
        }
    }
});

// Weekly Activity Chart
const weeklyCtx = document.getElementById('weeklyChart').getContext('2d');
new Chart(weeklyCtx, {
    type: 'bar',
    data: {
        labels: weeklyActivity.map(d => {
            const date = new Date(d.dataValues.date);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
        }),
        datasets: [{
            label: 'Completions',
            data: weeklyActivity.map(d => d.dataValues.count),
            backgroundColor: 'rgba(34, 197, 94, 0.8)',
            borderColor: 'rgb(34, 197, 94)',
            borderWidth: 1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            }
        }
    }
});
</script>