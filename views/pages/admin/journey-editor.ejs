<!-- Initialize journey data -->
<script>
(function() {
  'use strict';
  
  // Initialize journey data
  const journeyId = '<%= journey.id %>';
  const journeyDays = <%- JSON.stringify(journeyDays.map(day => ({
    ...day.toJSON(),
    contents: day.content || []
  }))) %>;
  
  // Initialize JourneyEditor when modules are loaded
  window.addEventListener('DOMContentLoaded', function() {
    if (window.JourneyEditor && window.JourneyEditor.init) {
      window.JourneyEditor.init(journeyId, journeyDays);
    } else {
      console.error('JourneyEditor modules not loaded!');
    }
  });
})();
</script>

