          if (content.metadata) {
            if (content.metadata.biblePassage) contentData.biblePassage = content.metadata.biblePassage;
            if (content.metadata.youtubeId) contentData.youtubeId = content.metadata.youtubeId;
            if (content.metadata.artist) contentData.artist = content.metadata.artist;
            if (content.metadata.image_url) contentData.image_url = content.metadata.image_url;
            if (content.metadata.video_url) contentData.video_url = content.metadata.video_url;
            if (content.metadata.audio_url) contentData.audio_url = content.metadata.audio_url;
            if (content.metadata.instructions) contentData.instructions = content.metadata.instructions;
            if (content.metadata.prompts) contentData.prompts = content.metadata.prompts;
            if (content.metadata.tags) contentData.tags = content.metadata.tags;
            if (content.metadata.theme) contentData.theme = content.metadata.theme;
            
            // Include other metadata
            contentData.metadata = { ...content.metadata };
          }
          
          return contentData;
        })
      }))
    };
    
    // Create and download JSON file
    const dataStr = JSON.stringify(exportData, null, 2);
    const dataBlob = new Blob([dataStr], { type: 'application/json' });
    const url = URL.createObjectURL(dataBlob);
    const link = document.createElement('a');
    link.href = url;
    link.download = `journey-${exportData.journey.title.toLowerCase().replace(/\s+/g, '-')}-export.json`;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    URL.revokeObjectURL(url);
    
    alert('Journey exported successfully! You can now share this file with others who can import it into their system.');
  } catch (error) {
    console.error('Error exporting journey:', error);
    alert('Failed to export journey');
  }
}

