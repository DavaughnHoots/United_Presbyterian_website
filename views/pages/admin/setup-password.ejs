<div class="max-w-md mx-auto">
    <!-- Header -->
    <div class="mb-8 text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-purple-100 rounded-full mb-4">
            <i class="fas fa-key text-3xl text-purple-600"></i>
        </div>
        <h1 class="text-3xl font-bold" style="color: var(--text-primary);">Admin Password Setup</h1>
        <p class="text-gray-600 mt-2">Secure your admin account with a password</p>
    </div>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-50 border border-red-300 text-red-700 px-4 py-3 rounded-lg mb-4">
            <i class="fas fa-exclamation-circle mr-2"></i>
            <%= error %>
        </div>
    <% } %>
    
    <% if (hasPassword) { %>
        <div class="bg-yellow-50 border border-yellow-300 text-yellow-800 px-4 py-3 rounded-lg mb-4">
            <i class="fas fa-info-circle mr-2"></i>
            You already have a password set. Setting a new one will replace the existing password.
        </div>
    <% } %>
    
    <form action="/admin/setup-password" method="POST" class="module-card">
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                New Password
            </label>
            <input 
                class="shadow appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" 
                id="password" 
                type="password" 
                name="password"
                placeholder="Enter a strong password"
                minlength="8"
                required
                autofocus
            >
            <p class="text-xs text-gray-600 mt-2">
                <i class="fas fa-shield-alt mr-1"></i>
                Minimum 8 characters
            </p>
        </div>
        
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="confirmPassword">
                Confirm Password
            </label>
            <input 
                class="shadow appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" 
                id="confirmPassword" 
                type="password" 
                name="confirmPassword"
                placeholder="Re-enter your password"
                minlength="8"
                required
            >
        </div>
        
        <!-- Password Requirements -->
        <div class="bg-purple-50 rounded-lg p-4 mb-6">
            <h3 class="font-semibold text-purple-900 mb-2">Password Requirements:</h3>
            <ul class="text-sm text-purple-700 space-y-1">
                <li><i class="fas fa-check-circle mr-2"></i>At least 8 characters long</li>
                <li><i class="fas fa-check-circle mr-2"></i>Use a mix of letters, numbers, and symbols</li>
                <li><i class="fas fa-check-circle mr-2"></i>Avoid common words or patterns</li>
                <li><i class="fas fa-check-circle mr-2"></i>Keep it secure and don't share it</li>
            </ul>
        </div>
        
        <button 
            class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 ease-in-out transform hover:scale-105 shadow-lg" 
            type="submit"
        >
            <i class="fas fa-lock mr-2"></i>
            <%= hasPassword ? 'Update Password' : 'Set Password' %>
        </button>
        
        <div class="mt-6 text-center">
            <a href="/admin" class="text-sm text-gray-600 hover:text-gray-800">
                <i class="fas fa-arrow-left mr-1"></i>
                Back to dashboard
            </a>
        </div>
    </form>
    
    <!-- Security Notice -->
    <div class="mt-8 module-card bg-blue-50">
        <div class="flex items-start">
            <i class="fas fa-info-circle text-blue-600 mt-1 mr-3"></i>
            <div>
                <h3 class="font-semibold text-blue-900 mb-1">Why Password Protection?</h3>
                <p class="text-sm text-blue-700">
                    Admin accounts have access to approve/reject submissions and manage church content. 
                    Password protection ensures only authorized personnel can access these sensitive features.
                </p>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    
    form.addEventListener('submit', function(e) {
        if (password.value !== confirmPassword.value) {
            e.preventDefault();
            confirmPassword.setCustomValidity('Passwords do not match');
            confirmPassword.reportValidity();
        }
    });
    
    confirmPassword.addEventListener('input', function() {
        if (password.value === confirmPassword.value) {
            confirmPassword.setCustomValidity('');
        } else {
            confirmPassword.setCustomValidity('Passwords do not match');
        }
    });
});
</script>