<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-6">
        <h1 class="text-3xl font-bold mb-2" style="color: var(--text-primary);">Daily Spiritual Journey</h1>
        <p class="text-gray-600"><%= today %></p>
        
        <% if (userJourney && journeyDay) { %>
            <div class="mt-4">
                <p class="text-lg font-semibold text-gray-700"><%= userJourney.journey.title %></p>
                <p class="text-gray-600">Day <%= userJourney.current_day %> of <%= userJourney.journey.duration_days %></p>
            </div>
        <% } %>
        
        <% if (user && allContentCompleted) { %>
            <div class="inline-flex items-center gap-2 mt-3 px-4 py-2 bg-green-100 text-green-700 rounded-full">
                <i class="fas fa-check-circle"></i>
                <span>Today's Journey Completed</span>
            </div>
        <% } else if (user && userProgress && userProgress.completed) { %>
            <div class="inline-flex items-center gap-2 mt-3 px-4 py-2 bg-green-100 text-green-700 rounded-full">
                <i class="fas fa-check-circle"></i>
                <span>Completed</span>
            </div>
        <% } %>
    </div>
    
    <% if (userJourney && journeyDay) { %>
        <!-- Journey Content -->
        <% if (journeyDay.title) { %>
            <div class="module-card mb-6">
                <h2 class="text-2xl font-bold mb-2"><%= journeyDay.title %></h2>
                <% if (journeyDay.description) { %>
                    <p class="text-gray-700 mb-4"><%= journeyDay.description %></p>
                <% } %>
                <% if (journeyDay.theme) { %>
                    <div class="inline-flex items-center gap-2 px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm">
                        <i class="fas fa-tag"></i>
                        <span><%= journeyDay.theme %></span>
                    </div>
                <% } %>
            </div>
        <% } %>
        
        <% if (journeyContent && journeyContent.length > 0) { %>
            <% journeyContent.forEach((content, index) => { %>
                <% 
                // Determine if this is custom content or database content
                const isCustom = content.content_id && (content.content_id === 'custom' || content.content_id.startsWith('custom_'));
                const contentData = isCustom ? content.actualContent : content.actualContent;
                %>
                
                <% if (content.content_type === 'bible_verse' && content.actualContent) { %>
                    <!-- Bible Verse Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-book-bible text-xl" style="color: var(--sky-blue);"></i>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold">Scripture Reading</h3>
                                    <p class="text-sm text-gray-600">
                                        <%= content.actualContent.book.name %> 
                                        <%= content.actualContent.chapter %>:<%= content.actualContent.verse %>
                                    </p>
                                </div>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <div class="bg-gradient-to-r from-sky-50 to-blue-50 rounded-lg p-6">
                            <p class="text-gray-700 leading-relaxed text-lg">
                                <%= content.actualContent.text %>
                            </p>
                        </div>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4 text-right">
                                <button class="btn-secondary btn-sm mark-complete" data-content-id="<%= content.id %>">
                                    <i class="fas fa-check mr-2"></i>Mark as Read
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else if ((content.content_type === 'scripture_reading' || content.content_type === 'reading') && contentData) { %>
                    <!-- Scripture Reading Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-book-open text-xl" style="color: var(--sky-blue);"></i>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold"><%= contentData.title || 'Scripture Reading' %></h3>
                                    <% if (contentData.biblePassage) { %>
                                        <p class="text-sm text-gray-600"><%= contentData.biblePassage %></p>
                                    <% } %>
                                </div>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <div class="bg-gradient-to-r from-sky-50 to-blue-50 rounded-lg p-6">
                            <p class="text-gray-700 leading-relaxed text-lg whitespace-pre-line">
                                <%= contentData.content || contentData.text || '' %>
                            </p>
                        </div>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4 text-right">
                                <button class="btn-secondary btn-sm mark-complete" data-content-id="<%= content.id %>">
                                    <i class="fas fa-check mr-2"></i>Mark as Read
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else if (content.content_type === 'prayer' && contentData) { %>
                    <!-- Prayer Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--cloud-white);">
                                    <i class="fas fa-praying-hands text-xl" style="color: var(--heaven-blue);"></i>
                                </div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Prayer' %></h3>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <div class="rounded-lg p-6" style="background-color: var(--soft-blue);">
                            <% if (contentData.artist) { %>
                                <p class="text-sm text-gray-600 mb-2"><%= contentData.artist %></p>
                            <% } %>
                            <p class="text-gray-700 leading-relaxed italic whitespace-pre-line">
                                <%= contentData.content || contentData.text || '' %>
                            </p>
                        </div>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4 text-right">
                                <button class="btn-secondary btn-sm mark-complete" data-content-id="<%= content.id %>">
                                    <i class="fas fa-check mr-2"></i>Mark as Prayed
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else if ((content.content_type === 'hymn' || content.content_type === 'music') && contentData) { %>
                    <!-- Hymn Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-music text-green-600 text-xl"></i>
                                </div>
                                <h3 class="text-xl font-semibold">Hymn</h3>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <div class="bg-green-50 rounded-lg p-6">
                            <% if (contentData.title) { %>
                                <h4 class="font-bold mb-3 text-lg text-gray-800"><%= contentData.title %></h4>
                            <% } %>
                            <% if (contentData.artist) { %>
                                <p class="text-sm text-gray-600 mb-2"><%= contentData.artist %></p>
                            <% } %>
                            <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                                <%= contentData.content || contentData.text || '' %>
                            </p>
                            
                            <% if (contentData.youtubeId || contentData.videoUrl) { %>
                                <div class="mt-4">
                                    <a href="<%= contentData.youtubeId ? `https://www.youtube.com/watch?v=${contentData.youtubeId}` : contentData.videoUrl %>" target="_blank" 
                                       class="inline-flex items-center gap-2 text-green-600 hover:text-green-700">
                                        <i class="fas fa-play-circle"></i>
                                        <span>Listen on YouTube</span>
                                    </a>
                                </div>
                            <% } %>
                        </div>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4 text-right">
                                <button class="btn-secondary btn-sm mark-complete" data-content-id="<%= content.id %>">
                                    <i class="fas fa-check mr-2"></i>Mark as Sung
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else if (content.content_type === 'artwork' && contentData) { %>
                    <!-- Artwork Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-palette text-purple-600 text-xl"></i>
                                </div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Artwork' %></h3>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <% if (contentData.image_url) { %>
                            <div class="mb-4">
                                <img src="<%= contentData.image_url %>" alt="<%= contentData.title %>" class="w-full rounded-lg shadow-sm">
                            </div>
                        <% } %>
                        
                        <% if (contentData.artist) { %>
                            <p class="text-sm text-gray-600 mb-2">By <%= contentData.artist %></p>
                        <% } %>
                        
                        <% if (contentData.content) { %>
                            <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                                <%= contentData.content %>
                            </p>
                        <% } %>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4 text-right">
                                <button class="btn-secondary btn-sm mark-complete" data-content-id="<%= content.id %>">
                                    <i class="fas fa-check mr-2"></i>Mark as Viewed
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else if (content.content_type === 'video' && contentData) { %>
                    <!-- Video Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-video text-red-600 text-xl"></i>
                                </div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Video' %></h3>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <% if (contentData.content) { %>
                            <p class="text-gray-700 mb-4"><%= contentData.content %></p>
                        <% } %>
                        
                        <% if (contentData.video_url || contentData.youtubeId) { %>
                            <div class="bg-gray-100 rounded-lg p-4 text-center">
                                <a href="<%= contentData.video_url || `https://www.youtube.com/watch?v=${contentData.youtubeId}` %>" target="_blank" 
                                   class="inline-flex items-center gap-2 text-red-600 hover:text-red-700 font-semibold">
                                    <i class="fas fa-play-circle text-2xl"></i>
                                    <span>Watch Video</span>
                                </a>
                            </div>
                        <% } %>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4 text-right">
                                <button class="btn-secondary btn-sm mark-complete" data-content-id="<%= content.id %>">
                                    <i class="fas fa-check mr-2"></i>Mark as Watched
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else if ((content.content_type === 'journaling_prompt' || content.content_type === 'question' || content.content_type === 'reflection') && contentData) { %>
                    <!-- Journaling/Reflection Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-lightbulb text-yellow-600 text-xl"></i>
                                </div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Reflection' %></h3>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <div class="bg-yellow-50 rounded-lg p-6">
                            <% if (contentData.content) { %>
                                <p class="text-gray-700 mb-4"><%= contentData.content %></p>
                            <% } %>
                            <% if (contentData.prompts && Array.isArray(contentData.prompts)) { %>
                                <ul class="space-y-2">
                                    <% contentData.prompts.forEach(prompt => { %>
                                        <li class="text-gray-700 flex items-start">
                                            <i class="fas fa-circle text-xs mt-1.5 mr-2 text-yellow-600"></i>
                                            <span><%= prompt %></span>
                                        </li>
                                    <% }); %>
                                </ul>
                            <% } else if (contentData.question) { %>
                                <p class="text-lg text-gray-700"><%= contentData.question %></p>
                            <% } %>
                        </div>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4">
                                <textarea 
                                    id="reflection-<%= content.id %>"
                                    class="w-full p-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent resize-none" 
                                    rows="4" 
                                    placeholder="Share your thoughts (private - only you can see this)..."
                                ></textarea>
                                <button class="btn-primary mt-3 w-full save-reflection" data-content-id="<%= content.id %>">
                                    <i class="fas fa-save mr-2"></i>Save Reflection
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else if (content.content_type === 'guided_prayer' && contentData) { %>
                    <!-- Guided Prayer Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-hands text-indigo-600 text-xl"></i>
                                </div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Guided Prayer' %></h3>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <div class="bg-indigo-50 rounded-lg p-6">
                            <% if (contentData.content) { %>
                                <p class="text-gray-700 mb-4 whitespace-pre-line"><%= contentData.content %></p>
                            <% } %>
                            <% if (contentData.instructions) { %>
                                <p class="text-sm text-gray-600 italic"><%= contentData.instructions %></p>
                            <% } %>
                        </div>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4 text-right">
                                <button class="btn-secondary btn-sm mark-complete" data-content-id="<%= content.id %>">
                                    <i class="fas fa-check mr-2"></i>Mark as Prayed
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else if (content.content_type === 'breathing_exercise' && contentData) { %>
                    <!-- Breathing Exercise Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-wind text-teal-600 text-xl"></i>
                                </div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Breathing Exercise' %></h3>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <div class="bg-teal-50 rounded-lg p-6">
                            <% if (contentData.content) { %>
                                <p class="text-gray-700 mb-4"><%= contentData.content %></p>
                            <% } %>
                            <% if (contentData.instructions) { %>
                                <div class="bg-white rounded p-4">
                                    <p class="text-gray-700 whitespace-pre-line"><%= contentData.instructions %></p>
                                </div>
                            <% } %>
                        </div>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4 text-right">
                                <button class="btn-secondary btn-sm mark-complete" data-content-id="<%= content.id %>">
                                    <i class="fas fa-check mr-2"></i>Mark as Completed
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else if (content.content_type === 'creed' && contentData) { %>
                    <!-- Creed Card -->
                    <div class="module-card mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-scroll text-amber-600 text-xl"></i>
                                </div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Creed' %></h3>
                            </div>
                            <% if (user && content.isCompleted) { %>
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            <% } %>
                        </div>
                        
                        <div class="bg-amber-50 rounded-lg p-6">
                            <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                                <%= contentData.content || contentData.text || '' %>
                            </p>
                        </div>
                        
                        <% if (user && !content.isCompleted) { %>
                            <div class="mt-4 text-right">
                                <button class="btn-secondary btn-sm mark-complete" data-content-id="<%= content.id %>">
                                    <i class="fas fa-check mr-2"></i>Mark as Recited
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            <% }); %>
        <% } else if (!content) { %>
            <!-- No Journey Content -->
            <div class="module-card text-center py-12">
                <i class="fas fa-map-signs text-6xl mb-4" style="color: var(--sky-blue);"></i>
                <h2 class="text-2xl font-semibold mb-2">No Content for Today</h2>
                <p class="text-gray-600">Check back tomorrow for your next spiritual journey content!</p>
            </div>
        <% } %>
        
    <% } else if (!content) { %>
        <!-- No Content Available -->
        <div class="module-card text-center py-12">
            <i class="fas fa-seedling text-6xl mb-4" style="color: var(--sky-blue);"></i>
            <h2 class="text-2xl font-semibold mb-2">Start Your Spiritual Journey</h2>
            <p class="text-gray-600 mb-6">Join a spiritual journey to receive daily scripture, prayers, and reflections.</p>
            <% if (user) { %>
                <a href="/journeys" class="btn-primary">
                    <i class="fas fa-route mr-2"></i>Browse Journeys
                </a>
            <% } else { %>
                <p class="text-gray-600 mb-4">Login to start your spiritual journey</p>
                <a href="/auth/login" class="btn-primary">Login</a>
            <% } %>
        </div>
    <% } else { %>
        <!-- Legacy Daily Content -->
        <!-- Bible Reading Card -->
        <% if (content.bibleReading) { %>
            <div class="module-card mb-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-book-bible text-xl" style="color: var(--sky-blue);"></i>
                    </div>
                    <h2 class="text-xl font-semibold">Daily Bible Reading</h2>
                </div>
                
                <div class="bg-gradient-to-r from-sky-50 to-blue-50 rounded-lg p-6">
                    <p class="text-gray-700 leading-relaxed whitespace-pre-line"><%= content.bibleReading %></p>
                </div>
            </div>
        <% } %>
        
        <!-- Prayer Card -->
        <% if (content.prayer) { %>
            <div class="module-card mb-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--cloud-white);">
                        <i class="fas fa-praying-hands text-xl" style="color: var(--heaven-blue);"></i>
                    </div>
                    <h2 class="text-xl font-semibold">Today's Prayer</h2>
                </div>
                
                <div class="rounded-lg p-6" style="background-color: var(--soft-blue);">
                    <p class="text-gray-700 leading-relaxed italic whitespace-pre-line"><%= content.prayer %></p>
                </div>
            </div>
        <% } %>
        
        <!-- Hymn Card -->
        <% if (content.hymn) { %>
            <div class="module-card mb-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-music text-green-600 text-xl"></i>
                    </div>
                    <h2 class="text-xl font-semibold">Hymn of the Day</h2>
                </div>
                
                <div class="bg-green-50 rounded-lg p-6">
                    <p class="text-gray-700 leading-relaxed whitespace-pre-line"><%= content.hymn %></p>
                    
                    <% if (content.hymnVideoUrl) { %>
                        <div class="mt-4">
                            <a href="<%= content.hymnVideoUrl %>" target="_blank" class="inline-flex items-center gap-2 text-green-600 hover:text-green-700">
                                <i class="fas fa-play-circle"></i>
                                <span>Listen on YouTube</span>
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>
        
        <!-- Reflection Question Card -->
        <% if (content.question) { %>
            <div class="module-card mb-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-lightbulb text-yellow-600 text-xl"></i>
                    </div>
                    <h2 class="text-xl font-semibold">Question for Reflection</h2>
                </div>
                
                <div class="bg-yellow-50 rounded-lg p-6 mb-4">
                    <p class="text-lg text-gray-700"><%= content.question %></p>
                </div>
                
                <% if (user) { %>
                    <% if (userProgress && userProgress.personalReflection) { %>
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="text-sm text-gray-600 mb-2">Your reflection:</p>
                            <p class="text-gray-700"><%= userProgress.personalReflection %></p>
                        </div>
                    <% } else { %>
                        <form id="reflectionForm" class="mt-4">
                            <textarea 
                                id="reflection"
                                name="reflection"
                                class="w-full p-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent resize-none" 
                                rows="4" 
                                placeholder="Share your thoughts (private - only you can see this)..."
                            ></textarea>
                            <button type="submit" class="btn-primary mt-3 w-full">
                                <i class="fas fa-save mr-2"></i>Save Reflection
                            </button>
                        </form>
                    <% } %>
                <% } else { %>
                    <div class="bg-gray-50 rounded-lg p-4 text-center">
                        <p class="text-gray-600 mb-3">Login to save your personal reflections</p>
                        <a href="/auth/login" class="btn-primary">Login</a>
                    </div>
                <% } %>
            </div>
        <% } %>
        
        <% if (user && (!userProgress || !userProgress.completed)) { %>
            <!-- Complete Day Card -->
            <div class="module-card text-center">
                <div class="w-20 h-20 mx-auto mb-3 rounded-full flex items-center justify-center" style="background: linear-gradient(135deg, var(--sky-blue) 0%, var(--heaven-blue) 100%);">
                    <i class="fas fa-flag-checkered text-3xl text-white"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Complete Today's Journey</h3>
                <p class="text-gray-600 mb-4">Mark today's spiritual content as complete to build your streak!</p>
                <button id="completeDay" class="btn-primary" data-content-id="<%= content.id %>">
                    <i class="fas fa-check-circle mr-2"></i>Mark as Complete
                </button>
            </div>
        <% } %>
    <% } %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle mark complete buttons for journey content
    const markCompleteButtons = document.querySelectorAll('.mark-complete');
    markCompleteButtons.forEach(button => {
        button.addEventListener('click', async function() {
            const contentId = this.getAttribute('data-content-id');
            
            try {
                const response = await fetch(`/api/journeys/content/${contentId}/complete`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                if (response.ok) {
                    const result = await response.json();
                    if (result.allCompleted) {
                        location.reload();
                    } else {
                        // Update UI to show completed
                        const card = this.closest('.module-card');
                        const header = card.querySelector('.flex.items-center.justify-between');
                        if (header && !header.querySelector('.fa-check-circle')) {
                            const checkIcon = document.createElement('i');
                            checkIcon.className = 'fas fa-check-circle text-green-500 text-xl';
                            header.appendChild(checkIcon);
                        }
                        this.closest('.text-right').remove();
                    }
                } else {
                    alert('Failed to mark as complete. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        });
    });
    
    // Handle save reflection buttons
    const saveReflectionButtons = document.querySelectorAll('.save-reflection');
    saveReflectionButtons.forEach(button => {
        button.addEventListener('click', async function() {
            const contentId = this.getAttribute('data-content-id');
            const textarea = document.getElementById(`reflection-${contentId}`);
            const reflection = textarea.value.trim();
            
            if (!reflection) {
                alert('Please write a reflection before saving.');
                return;
            }
            
            // First save the reflection
            // Then mark as complete
            try {
                const response = await fetch(`/api/journeys/content/${contentId}/complete`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        reflection: reflection
                    })
                });
                
                if (response.ok) {
                    const result = await response.json();
                    if (result.allCompleted) {
                        location.reload();
                    } else {
                        // Update UI to show completed
                        const card = this.closest('.module-card');
                        const header = card.querySelector('.flex.items-center.justify-between');
                        if (header && !header.querySelector('.fa-check-circle')) {
                            const checkIcon = document.createElement('i');
                            checkIcon.className = 'fas fa-check-circle text-green-500 text-xl';
                            header.appendChild(checkIcon);
                        }
                        this.closest('.mt-4').innerHTML = '<p class="text-green-600"><i class="fas fa-check-circle mr-2"></i>Reflection saved!</p>';
                    }
                } else {
                    alert('Failed to save reflection. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        });
    });
    
    // Handle reflection form for legacy content
    const reflectionForm = document.getElementById('reflectionForm');
    if (reflectionForm) {
        reflectionForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            const reflection = document.getElementById('reflection').value.trim();
            
            if (!reflection) {
                alert('Please write a reflection before saving.');
                return;
            }
            
            try {
                const response = await fetch('/api/daily/reflection', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        contentId: '<%= content ? content.id : null %>',
                        reflection: reflection
                    })
                });
                
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Failed to save reflection. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        });
    }
    
    // Handle complete day button for legacy content
    const completeBtn = document.getElementById('completeDay');
    if (completeBtn) {
        completeBtn.addEventListener('click', async function() {
            const contentId = this.getAttribute('data-content-id');
            
            try {
                const response = await fetch('/api/daily/complete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        contentId: contentId
                    })
                });
                
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Failed to mark as complete. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        });
    }
});
</script>