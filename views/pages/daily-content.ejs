<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle mark complete buttons for journey content
    const markCompleteButtons = document.querySelectorAll('.mark-complete');
    markCompleteButtons.forEach(button => {
        button.addEventListener('click', async function() {
            const contentId = this.getAttribute('data-content-id');
            
            try {
                const response = await fetch(`/api/journeys/content/${contentId}/complete`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                if (response.ok) {
                    const result = await response.json();
                    if (result.allCompleted) {
                        location.reload();
                    } else {
                        // Update UI to show completed
                        const card = this.closest('.module-card');
                        const header = card.querySelector('.flex.items-center.justify-between');
                        if (header && !header.querySelector('.fa-check-circle')) {
                            const checkIcon = document.createElement('i');
                            checkIcon.className = 'fas fa-check-circle text-green-500 text-xl';
                            header.appendChild(checkIcon);
                        }
                        this.remove();
                    }
                } else {
                    alert('Failed to mark as complete. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        });
    });
});

// Keyboard navigation
document.addEventListener('keydown', function(e) {
    // Only trigger if no input/textarea is focused
    if (document.activeElement.tagName === 'INPUT' || 
        document.activeElement.tagName === 'TEXTAREA') {
        return;
    }
    
    // Left arrow - previous day
    if (e.key === 'ArrowLeft') {
        e.preventDefault();
        window.location.href = '/daily?date=<%= prevDateStr %>';
    }
    
    // Right arrow - next day (if allowed)
    <% if (canGoNext) { %>
    if (e.key === 'ArrowRight') {
        e.preventDefault();
        window.location.href = '/daily?date=<%= nextDateStr %>';
    }
    <% } %>
    
    // 'T' key - return to today
    if ((e.key === 't' || e.key === 'T') && !<%= isToday %>) {
        e.preventDefault();
        window.location.href = '/daily';
    }
});

// Amen button functionality
async function handleAmen(contentType, contentId) {
    try {
        const response = await fetch('/api/engagement/amen', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                contentType: contentType,
                contentId: contentId
            })
        });
        
        if (response.ok) {
            const result = await response.json();
            
            // Update the count display
            const countElement = document.getElementById(`amen-count-${contentType}-${contentId}`);
            if (countElement) {
                countElement.textContent = `(${result.count})`;
            }
            
            // Add visual feedback
            const button = document.querySelector(`button[data-content-type="${contentType}"][data-content-id="${contentId}"]`);
            if (button) {
                // Add animation class
                button.classList.add('animate-pulse');
                
                // Change button style to indicate it's been clicked
                if (result.action === 'added') {
                    button.classList.add('bg-blue-50', 'border-blue-400');
                    button.querySelector('i').classList.add('text-blue-700');
                } else {
                    button.classList.remove('bg-blue-50', 'border-blue-400');
                    button.querySelector('i').classList.remove('text-blue-700');
                }
                
                // Remove animation after a moment
                setTimeout(() => {
                    button.classList.remove('animate-pulse');
                }, 1000);
            }
        } else {
            console.error('Failed to record Amen');
        }
    } catch (error) {
        console.error('Error recording Amen:', error);
    }
}

// Mark content as complete
async function markAsComplete(contentType, contentId) {
    try {
        const response = await fetch('/api/progress/complete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                contentType: contentType,
                contentId: contentId
            })
        });
        
        if (response.ok) {
            const result = await response.json();
            
            // Show success message and reload page
            const button = event.target.closest('button');
            if (button) {
                button.innerHTML = '<i class="fas fa-check mr-1"></i>Completed!';
                button.classList.add('text-green-700');
                button.disabled = true;
            }
            
            // Reload page after a moment to show updated progress
            setTimeout(() => {
                location.reload();
            }, 1500);
        } else {
            alert('Please log in to track your progress');
        }
    } catch (error) {
        console.error('Error marking complete:', error);
        alert('An error occurred. Please try again.');
    }
}

// Load Amen counts on page load
document.addEventListener('DOMContentLoaded', async function() {
    // Get all unique content items with Amen buttons
    const amenButtons = document.querySelectorAll('.amen-button');
    const contentItems = [];
    
    amenButtons.forEach(button => {
        const contentType = button.dataset.contentType;
        const contentId = button.dataset.contentId;
        if (contentType && contentId) {
            contentItems.push({ contentType, contentId });
        }
    });
    
    // Fetch counts for all items
    if (contentItems.length > 0) {
        try {
            const promises = contentItems.map(item => 
                fetch(`/api/engagement/amen-count?contentType=${item.contentType}&contentId=${item.contentId}`)
                    .then(res => res.json())
                    .then(data => ({ ...item, count: data.count }))
            );
            
            const results = await Promise.all(promises);
            
            // Update all count displays
            results.forEach(result => {
                const countElement = document.getElementById(`amen-count-${result.contentType}-${result.contentId}`);
                if (countElement) {
                    countElement.textContent = `(${result.count})`;
                }
            });
        } catch (error) {
            console.error('Error loading Amen counts:', error);
        }
    }
});
</script>
