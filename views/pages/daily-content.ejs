<div class="max-w-4xl mx-auto">
    <!-- Navigation Header -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
        <div class="flex items-center justify-between">
            <!-- Previous Day Button -->
            <a href="/daily?date=<%= prevDateStr %>" 
               class="p-2 hover:bg-gray-100 rounded-lg transition">
                <i class="fas fa-chevron-left text-xl text-gray-600"></i>
            </a>
            
            <!-- Date Display & Controls -->
            <div class="text-center flex-1">
                <h2 class="text-xl font-semibold text-gray-800">
                    <%= selectedDateFormatted %>
                </h2>
                <% if (!isToday) { %>
                    <div class="flex items-center gap-2 mt-2 justify-center">
                        <span class="text-sm text-gray-500">Viewing past content</span>
                        <a href="/daily" 
                           class="px-3 py-1 bg-sky-blue text-white rounded-full text-sm hover:bg-blue-600 transition">
                            Go to Today
                        </a>
                    </div>
                <% } else { %>
                    <div class="mt-2">
                        <span class="text-sm text-green-600 font-medium">
                            <i class="fas fa-calendar-check mr-1"></i>
                            Today's Content
                        </span>
                    </div>
                <% } %>
            </div>
            
            <!-- Next Day Button -->
            <% if (canGoNext) { %>
                <a href="/daily?date=<%= nextDateStr %>" 
                   class="p-2 hover:bg-gray-100 rounded-lg transition">
                    <i class="fas fa-chevron-right text-xl text-gray-600"></i>
                </a>
            <% } else { %>
                <button class="p-2 rounded-lg opacity-50 cursor-not-allowed" disabled>
                    <i class="fas fa-chevron-right text-xl text-gray-400"></i>
                </button>
            <% } %>
        </div>
        
        <!-- Visual date indicator dots -->
        <div class="flex justify-center mt-4 gap-1">
            <% 
            // Show dots for last 5 days
            for (let i = 4; i >= 0; i--) {
                const dotDate = new Date(selectedDate);
                dotDate.setDate(dotDate.getDate() - i);
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                
                let dotClass = "w-2 h-2 rounded-full ";
                if (dotDate > today) {
                    dotClass += "bg-gray-200"; // Future
                } else if (i === 0) {
                    dotClass += "bg-sky-blue"; // Selected
                } else {
                    dotClass += "bg-gray-300"; // Past
                }
            %>
                <div class="<%= dotClass %>"></div>
            <% } %>
        </div>
    </div>
    
    <!-- Header -->
    <div class="text-center mb-6">
        <h1 class="text-3xl font-bold mb-2" style="color: var(--text-primary);">Daily Spiritual Journey</h1>
        
        <% if (userJourney && journeyDay) { %>
            <div class="mt-4">
                <p class="text-lg font-semibold text-gray-700"><%= userJourney.journey.title %></p>
                <p class="text-gray-600">Day <%= userJourney.current_day %> of <%= userJourney.journey.duration_days %></p>
            </div>
        <% } %>
        
        <% if (user && allContentCompleted) { %>
            <div class="inline-flex items-center gap-2 mt-3 px-4 py-2 bg-green-100 text-green-700 rounded-full">
                <i class="fas fa-check-circle"></i>
                <span>Today's Journey Completed</span>
            </div>
        <% } else if (user && userProgress && userProgress.completed) { %>
            <div class="inline-flex items-center gap-2 mt-3 px-4 py-2 bg-green-100 text-green-700 rounded-full">
                <i class="fas fa-check-circle"></i>
                <span>Completed</span>
            </div>
        <% } %>
    </div>
    
    <% if (dailyScheduledContent && dailyScheduledContent.length > 0) { %>
        <!-- Daily Scheduled Content -->
        <div class="module-card mb-6">
            <h2 class="text-2xl font-bold mb-2">Today's Spiritual Content</h2>
            <p class="text-gray-700">Daily content selected for your spiritual growth</p>
        </div>
        
        <% dailyScheduledContent.forEach((content, index) => { %>
            <% const contentData = content.actualContent; %>
            
            <% if (content.content_type === 'scripture_reading' && contentData) { %>
                <!-- Scripture Reading Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-book-open text-xl" style="color: var(--sky-blue);"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Scripture Reading' %></h3>
                                <% if (contentData.biblePassage) { %>
                                    <p class="text-sm text-gray-600"><%= contentData.biblePassage %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-gradient-to-r from-sky-50 to-blue-50 rounded-lg p-6">
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content || '' %>
                        </p>
                    </div>
                    
                    <!-- Amen Button -->
                    <div class="mt-4 flex items-center justify-between border-t pt-4">
                        <button onclick="handleAmen('scripture_reading', '<%= contentData.id %>')" 
                                class="amen-button flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-blue-50 hover:border-blue-300 transition-all"
                                data-content-type="scripture_reading" 
                                data-content-id="<%= contentData.id %>">
                            <i class="fas fa-praying-hands text-blue-600"></i>
                            <span>Amen</span>
                            <span class="amen-count ml-2 text-gray-500" id="amen-count-scripture_reading-<%= contentData.id %>">(0)</span>
                        </button>
                        <% if (user) { %>
                            <button onclick="markAsComplete('scripture_reading', '<%= contentData.id %>')" 
                                    class="text-sm text-green-600 hover:text-green-700">
                                <i class="fas fa-check-circle mr-1"></i>Mark as Read
                            </button>
                        <% } %>
                    </div>
                </div>
            <% } else if (content.content_type === 'hymn' && contentData) { %>
                <!-- Hymn Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-music text-xl text-green-600"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Hymn' %></h3>
                                <% if (contentData.artist) { %>
                                    <p class="text-sm text-gray-600"><%= contentData.artist %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-green-50 rounded-lg p-6">
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content || '' %>
                        </p>
                    </div>
                    
                    <% if (contentData.youtubeId || contentData.audio_url) { %>
                        <div class="mt-4 flex justify-center gap-4">
                            <% if (contentData.youtubeId) { %>
                                <a href="https://youtube.com/watch?v=<%= contentData.youtubeId %>" target="_blank" 
                                   class="inline-flex items-center gap-2 px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200">
                                    <i class="fas fa-video"></i>
                                    <span>Watch Video</span>
                                </a>
                            <% } %>
                            <% if (contentData.audio_url) { %>
                                <a href="<%= contentData.audio_url %>" target="_blank" 
                                   class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200">
                                    <i class="fas fa-headphones"></i>
                                    <span>Listen</span>
                                </a>
                            <% } %>
                        </div>
                    <% } %>
                    
                    <!-- Amen Button -->
                    <div class="mt-4 flex items-center justify-between border-t pt-4">
                        <button onclick="handleAmen('hymn', '<%= contentData.id %>')" 
                                class="amen-button flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-green-50 hover:border-green-300 transition-all"
                                data-content-type="hymn" 
                                data-content-id="<%= contentData.id %>">
                            <i class="fas fa-praying-hands text-green-600"></i>
                            <span>Amen</span>
                            <span class="amen-count ml-2 text-gray-500" id="amen-count-hymn-<%= contentData.id %>">(0)</span>
                        </button>
                        <% if (user) { %>
                            <button onclick="markAsComplete('hymn', '<%= contentData.id %>')" 
                                    class="text-sm text-green-600 hover:text-green-700">
                                <i class="fas fa-check-circle mr-1"></i>Mark as Sung
                            </button>
                        <% } %>
                    </div>
                </div>
            <% } else if (content.content_type === 'prayer' && contentData) { %>
                <!-- Prayer Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-praying-hands text-xl text-indigo-600"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Prayer' %></h3>
                                <% if (contentData.author) { %>
                                    <p class="text-sm text-gray-600"><%= contentData.author %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-indigo-50 rounded-lg p-6">
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content || '' %>
                        </p>
                    </div>
                    
                    <!-- Amen Button -->
                    <div class="mt-4 flex items-center justify-between border-t pt-4">
                        <button onclick="handleAmen('prayer', '<%= contentData.id %>')" 
                                class="amen-button flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-indigo-50 hover:border-indigo-300 transition-all"
                                data-content-type="prayer" 
                                data-content-id="<%= contentData.id %>">
                            <i class="fas fa-praying-hands text-indigo-600"></i>
                            <span>Amen</span>
                            <span class="amen-count ml-2 text-gray-500" id="amen-count-prayer-<%= contentData.id %>">(0)</span>
                        </button>
                        <% if (user) { %>
                            <button onclick="markAsComplete('prayer', '<%= contentData.id %>')" 
                                    class="text-sm text-green-600 hover:text-green-700">
                                <i class="fas fa-check-circle mr-1"></i>Mark as Prayed
                            </button>
                        <% } %>
                    </div>
                </div>
            <% } else if (content.content_type === 'journaling_prompt' && contentData) { %>
                <!-- Journaling Prompt Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-pen-fancy text-xl text-purple-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold"><%= contentData.title || 'Journaling Prompt' %></h3>
                        </div>
                    </div>
                    
                    <div class="space-y-4">
                        <% if (contentData.content) { %>
                            <p class="text-gray-700"><%= contentData.content %></p>
                        <% } %>
                        
                        <% if (contentData.prompts && contentData.prompts.length > 0) { %>
                            <div class="bg-purple-50 rounded-lg p-6">
                                <h4 class="font-semibold mb-3">Reflection Questions:</h4>
                                <ol class="list-decimal list-inside space-y-2">
                                    <% contentData.prompts.forEach(prompt => { %>
                                        <li class="text-gray-700"><%= prompt %></li>
                                    <% }) %>
                                </ol>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } else if (content.content_type === 'guided_prayer' && contentData) { %>
                <!-- Guided Prayer Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-hands text-xl text-teal-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold"><%= contentData.title || 'Guided Prayer' %></h3>
                        </div>
                    </div>
                    
                    <div class="bg-teal-50 rounded-lg p-6">
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content || '' %>
                        </p>
                    </div>
                </div>
            <% } else if (content.content_type === 'reflection' && contentData) { %>
                <!-- Reflection Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-dove text-xl text-amber-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold"><%= contentData.title || 'Reflection' %></h3>
                        </div>
                    </div>
                    
                    <div class="bg-amber-50 rounded-lg p-6">
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content || '' %>
                        </p>
                    </div>
                </div>
            <% } else if (content.content_type === 'artwork' && contentData) { %>
                <!-- Artwork Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-pink-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-palette text-xl text-pink-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold"><%= contentData.title || 'Artwork' %></h3>
                        </div>
                    </div>
                    
                    <% if (contentData.image_url) { %>
                        <div class="mb-4">
                            <img src="<%= contentData.image_url %>" alt="<%= contentData.title %>" class="w-full rounded-lg shadow-sm">
                        </div>
                    <% } %>
                    
                    <% if (contentData.artist) { %>
                        <p class="text-sm text-gray-600 mb-2">By <%= contentData.artist %></p>
                    <% } %>
                    
                    <% if (contentData.content) { %>
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content %>
                        </p>
                    <% } %>
                </div>
            <% } else if (content.content_type === 'video' && contentData) { %>
                <!-- Video Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-video text-xl text-red-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold"><%= contentData.title || 'Video' %></h3>
                        </div>
                    </div>
                    
                    <% if (contentData.video_url || contentData.youtubeId) { %>
                        <div class="bg-gray-100 rounded-lg p-4 text-center">
                            <a href="<%= contentData.video_url || `https://www.youtube.com/watch?v=${contentData.youtubeId}` %>" target="_blank" 
                               class="inline-flex items-center gap-2 text-red-600 hover:text-red-700 font-semibold">
                                <i class="fas fa-play-circle text-2xl"></i>
                                <span>Watch Video</span>
                            </a>
                        </div>
                    <% } %>
                    
                    <% if (contentData.content) { %>
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line mt-4">
                            <%= contentData.content %>
                        </p>
                    <% } %>
                </div>
            <% } else if (content.content_type === 'creed' && contentData) { %>
                <!-- Creed Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-scroll text-xl text-gray-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold"><%= contentData.title || 'Creed' %></h3>
                        </div>
                    </div>
                    
                    <div class="bg-gray-50 rounded-lg p-6">
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content || '' %>
                        </p>
                    </div>
                </div>
            <% } else if (content.content_type === 'reading' && contentData) { %>
                <!-- Reading Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-book text-xl text-orange-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold"><%= contentData.title || 'Reading' %></h3>
                        </div>
                    </div>
                    
                    <div class="bg-orange-50 rounded-lg p-6">
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content || '' %>
                        </p>
                    </div>
                </div>
            <% } else if (content.content_type === 'music' && contentData) { %>
                <!-- Music Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-headphones text-xl text-blue-600"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold"><%= contentData.title || 'Music' %></h3>
                                <% if (contentData.artist) { %>
                                    <p class="text-sm text-gray-600"><%= contentData.artist %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-blue-50 rounded-lg p-6">
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content || '' %>
                        </p>
                    </div>
                    
                    <% if (contentData.youtubeId || contentData.audio_url) { %>
                        <div class="mt-4 flex justify-center gap-4">
                            <% if (contentData.youtubeId) { %>
                                <a href="https://youtube.com/watch?v=<%= contentData.youtubeId %>" target="_blank" 
                                   class="inline-flex items-center gap-2 px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200">
                                    <i class="fas fa-video"></i>
                                    <span>Watch Video</span>
                                </a>
                            <% } %>
                            <% if (contentData.audio_url) { %>
                                <a href="<%= contentData.audio_url %>" target="_blank" 
                                   class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200">
                                    <i class="fas fa-headphones"></i>
                                    <span>Listen</span>
                                </a>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            <% } else if (content.content_type === 'question' && contentData) { %>
                <!-- Question Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-lightbulb text-xl text-yellow-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold">Question for Reflection</h3>
                        </div>
                    </div>
                    
                    <div class="bg-yellow-50 rounded-lg p-6">
                        <p class="text-lg text-gray-700">
                            <%= contentData.content || contentData.question || '' %>
                        </p>
                    </div>
                </div>
            <% } else if (content.content_type === 'historical_context' && contentData) { %>
                <!-- Historical Context Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-history text-xl text-amber-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold"><%= contentData.title || 'Historical Context' %></h3>
                        </div>
                    </div>
                    
                    <% if (contentData.metadata?.time_period || contentData.metadata?.figure) { %>
                        <div class="flex flex-wrap gap-2 mb-3">
                            <% if (contentData.metadata.time_period) { %>
                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-amber-100 text-amber-700 rounded text-sm">
                                    <i class="fas fa-clock text-xs"></i>
                                    <%= contentData.metadata.time_period %>
                                </span>
                            <% } %>
                            <% if (contentData.metadata.figure) { %>
                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-amber-100 text-amber-700 rounded text-sm">
                                    <i class="fas fa-user text-xs"></i>
                                    <%= contentData.metadata.figure %>
                                </span>
                            <% } %>
                            <% if (contentData.metadata.location) { %>
                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 rounded text-sm">
                                    <i class="fas fa-map-marker-alt text-xs"></i>
                                    <%= contentData.metadata.location %>
                                </span>
                            <% } %>
                        </div>
                    <% } %>
                    
                    <% if (contentData.image_url) { %>
                        <div class="mb-4">
                            <img src="<%= contentData.image_url %>" alt="<%= contentData.title %>" class="w-full rounded-lg shadow-sm">
                        </div>
                    <% } %>
                    
                    <div class="prose max-w-none">
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            <%= contentData.content %>
                        </p>
                    </div>
                    
                    <% if (contentData.metadata?.related_hymn || contentData.metadata?.biblical_reference) { %>
                        <div class="mt-4 pt-4 border-t flex flex-wrap gap-2">
                            <% if (contentData.metadata.related_hymn) { %>
                                <span class="inline-flex items-center gap-1 px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm">
                                    <i class="fas fa-music"></i>
                                    <%= contentData.metadata.related_hymn %>
                                </span>
                            <% } %>
                            <% if (contentData.metadata.biblical_reference) { %>
                                <span class="inline-flex items-center gap-1 px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm">
                                    <i class="fas fa-bible"></i>
                                    <%= contentData.metadata.biblical_reference %>
                                </span>
                            <% } %>
                        </div>
                    <% } %>
                    
                    <% if (contentData.metadata?.questions && Array.isArray(contentData.metadata.questions) && contentData.metadata.questions.length > 0) { %>
                        <div class="mt-4 p-4 bg-amber-50 rounded-lg">
                            <h4 class="font-semibold text-amber-900 mb-2">Reflection Questions:</h4>
                            <ul class="space-y-2">
                                <% contentData.metadata.questions.forEach(question => { %>
                                    <li class="flex items-start">
                                        <span class="text-amber-600 mr-2">•</span>
                                        <span class="text-gray-700"><%= question %></span>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } %>
                </div>
            <% } else if (content.content_type === 'interactive_map' && contentData) { %>
                <!-- Interactive Map Card -->
                <div class="module-card mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-map-marked-alt text-xl text-teal-600"></i>
