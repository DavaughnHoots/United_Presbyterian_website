<div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-4" style="color: var(--text-primary);">Spiritual Journeys</h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
            Embark on a structured spiritual journey with daily scripture readings, prayers, hymns, and reflections 
            designed to deepen your faith and connection with God.
        </p>
    </div>

    <% if (activeJourney) { %>
        <!-- Active Journey Card -->
        <div class="module-card mb-8 border-2 border-green-500">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <div class="flex items-center gap-3 mb-2">
                        <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-route text-green-600 text-xl"></i>
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold"><%= activeJourney.journey.title %></h2>
                            <p class="text-sm text-green-600 font-semibold">Currently Active</p>
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <p class="text-3xl font-bold text-gray-800">Day <%= activeJourney.current_day %></p>
                    <p class="text-sm text-gray-600">of <%= activeJourney.journey.duration_days %></p>
                </div>
            </div>
            
            <% if (activeJourney.journey.description) { %>
                <p class="text-gray-700 mb-4"><%= activeJourney.journey.description %></p>
            <% } %>
            
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <div class="bg-gray-200 rounded-full h-3 overflow-hidden">
                        <div class="bg-green-500 h-full transition-all duration-500" 
                             style="width: <%= Math.round((activeJourney.current_day / activeJourney.journey.duration_days) * 100) %>%"></div>
                    </div>
                    <p class="text-sm text-gray-600 mt-2">
                        <%= Math.round((activeJourney.current_day / activeJourney.journey.duration_days) * 100) %>% Complete
                    </p>
                </div>
                <a href="/daily" class="btn-primary ml-6">
                    <i class="fas fa-book-open mr-2"></i>Continue Journey
                </a>
            </div>
        </div>
    <% } %>

    <!-- Available Journeys -->
    <div class="mb-6">
        <h2 class="text-2xl font-bold mb-4" style="color: var(--text-primary);">
            <%= activeJourney ? 'Other Available Journeys' : 'Available Journeys' %>
        </h2>
        
        <% if (journeys && journeys.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% journeys.forEach(journey => { %>
                    <% if (!activeJourney || activeJourney.journey_id !== journey.id) { %>
                        <div class="module-card hover:shadow-lg transition-shadow">
                            <div class="flex items-start gap-3 mb-4">
                                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-compass text-blue-600"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-xl font-semibold mb-1"><%= journey.title %></h3>
                                    <p class="text-sm text-gray-600">
                                        <i class="fas fa-calendar-alt mr-1"></i>
                                        <%= journey.duration_days %> days
                                    </p>
                                </div>
                            </div>
                            
                            <% if (journey.description) { %>
                                <p class="text-gray-700 mb-4 line-clamp-3"><%= journey.description %></p>
                            <% } %>
                            
                            <% if (user) { %>
                                <button class="btn-secondary w-full start-journey" data-journey-id="<%= journey.id %>">
                                    <i class="fas fa-play mr-2"></i>Start This Journey
                                </button>
                            <% } else { %>
                                <a href="/auth/login" class="btn-secondary w-full text-center">
                                    <i class="fas fa-sign-in-alt mr-2"></i>Login to Start
                                </a>
                            <% } %>
                        </div>
                    <% } %>
                <% }); %>
            </div>
        <% } else { %>
            <div class="module-card text-center py-12">
                <i class="fas fa-map-marked-alt text-6xl mb-4" style="color: var(--sky-blue);"></i>
                <h3 class="text-2xl font-semibold mb-2">No Journeys Available</h3>
                <p class="text-gray-600">Check back soon for new spiritual journeys!</p>
            </div>
        <% } %>
    </div>

    <% if (!user) { %>
        <!-- Call to Action for Non-logged in Users -->
        <div class="module-card text-center py-8 mt-8" style="background: linear-gradient(135deg, var(--soft-blue) 0%, var(--cloud-white) 100%);">
            <h3 class="text-2xl font-bold mb-3" style="color: var(--text-primary);">Ready to Begin Your Journey?</h3>
            <p class="text-gray-700 mb-6 max-w-lg mx-auto">
                Login or create an account to start your spiritual journey and track your daily progress.
            </p>
            <div class="flex gap-4 justify-center">
                <a href="/auth/login" class="btn-primary">
                    <i class="fas fa-sign-in-alt mr-2"></i>Login
                </a>
                <a href="/auth/register" class="btn-secondary">
                    <i class="fas fa-user-plus mr-2"></i>Create Account
                </a>
            </div>
        </div>
    <% } %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle start journey buttons
    const startButtons = document.querySelectorAll('.start-journey');
    startButtons.forEach(button => {
        button.addEventListener('click', async function() {
            const journeyId = this.getAttribute('data-journey-id');
            
            if (!confirm('Starting a new journey will replace your current active journey. Continue?')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/journeys/${journeyId}/start`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                if (response.ok) {
                    window.location.href = '/daily';
                } else {
                    const error = await response.json();
                    alert(error.error || 'Failed to start journey. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        });
    });
});
</script>

<style>
.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>