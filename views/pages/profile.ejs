<div class="max-w-md mx-auto">
  <div class="module-card mb-6 text-center">
    <div class="mb-4">
      <i class="fas fa-user-circle text-6xl" style="color: var(--sky-blue);"></i>
    </div>
    <h1 class="text-2xl font-bold mb-2" style="color: var(--text-primary);"><%= user.firstName %> <%= user.lastName %></h1>
    <p class="text-gray-600 mb-4"><%= user.email %></p>
    
    <% if (user.currentStreak > 0) { %>
      <div class="grid grid-cols-2 gap-4 mt-6 pt-6 border-t border-gray-200">
        <div>
          <p class="text-3xl font-bold" style="color: var(--sky-blue);"><%= user.currentStreak %></p>
          <p class="text-sm text-gray-600">Current Streak</p>
        </div>
        <div>
          <p class="text-3xl font-bold" style="color: var(--heaven-blue);"><%= user.longestStreak || 0 %></p>
          <p class="text-sm text-gray-600">Longest Streak</p>
        </div>
      </div>
    <% } %>
  </div>

  <div class="space-y-4">
    <a href="/profile/settings" class="module-card block hover:shadow-lg transition-shadow">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <i class="fas fa-cog text-2xl mr-4" style="color: var(--sky-blue);"></i>
          <span class="font-medium">Account Settings</span>
        </div>
        <i class="fas fa-chevron-right text-gray-400"></i>
      </div>
    </a>

    <% if (user.isAdmin) { %>
      <a href="/admin" class="module-card block hover:shadow-lg transition-shadow">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <i class="fas fa-shield-alt text-2xl mr-4" style="color: var(--heaven-blue);"></i>
            <span class="font-medium">Admin Dashboard</span>
          </div>
          <i class="fas fa-chevron-right text-gray-400"></i>
        </div>
      </a>
    <% } %>

    <a href="/auth/logout" class="module-card block hover:shadow-lg transition-shadow">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <i class="fas fa-sign-out-alt text-2xl mr-4 text-red-500"></i>
          <span class="font-medium text-red-600">Sign Out</span>
        </div>
        <i class="fas fa-chevron-right text-gray-400"></i>
      </div>
    </a>
  </div>
</div>