<div class="max-w-2xl mx-auto">
  <!-- Success Animation -->
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-24 h-24 bg-green-100 rounded-full mb-4">
      <i class="fas fa-check-circle text-5xl text-green-500"></i>
    </div>
    <h1 class="text-3xl font-bold mb-2" style="color: var(--text-primary);">Welcome <%= registrationInfo.firstName %>!</h1>
    <p class="text-gray-600">Your account has been created successfully</p>
  </div>

  <!-- UPC Access Info Card -->
  <div class="module-card mb-6" style="background: linear-gradient(135deg, #E6F3FF 0%, #F0F8FF 100%);">
    <div class="text-center mb-4">
      <h2 class="text-xl font-semibold mb-2" style="color: var(--text-primary);">Your UPC Access Account</h2>
      <p class="text-gray-600">Use this email to sign in - no password needed!</p>
    </div>
    
    <div class="bg-white rounded-lg p-6 text-center shadow-inner">
      <p class="text-sm text-gray-500 mb-2">Your UPC Email:</p>
      <p class="text-2xl font-mono font-bold" style="color: var(--sky-blue);"><%= registrationInfo.email %></p>
    </div>
    
    <% if (registrationInfo.personalEmail) { %>
      <div class="mt-4 text-center">
        <p class="text-sm text-green-600">
          <i class="fas fa-envelope mr-2"></i>
          We've sent your login details to <%= registrationInfo.personalEmail %>
        </p>
      </div>
    <% } %>
  </div>

  <!-- How It Works -->
  <div class="module-card mb-6">
    <h3 class="text-lg font-semibold mb-4" style="color: var(--text-primary);">
      <i class="fas fa-info-circle mr-2"></i>How Passwordless Login Works
    </h3>
    
    <div class="space-y-4">
      <div class="flex items-start">
        <div class="flex-shrink-0 w-8 h-8 bg-sky-100 rounded-full flex items-center justify-center mr-3">
          <span class="text-sm font-bold" style="color: var(--sky-blue);">1</span>
        </div>
        <div>
          <p class="font-medium">No Password Needed</p>
          <p class="text-sm text-gray-600">Just enter your UPC email address to sign in</p>
        </div>
      </div>
      
      <div class="flex items-start">
        <div class="flex-shrink-0 w-8 h-8 bg-sky-100 rounded-full flex items-center justify-center mr-3">
          <span class="text-sm font-bold" style="color: var(--sky-blue);">2</span>
        </div>
        <div>
          <p class="font-medium">Secure & Simple</p>
          <p class="text-sm text-gray-600">Your account is protected and easy to access</p>
        </div>
      </div>
      
      <div class="flex items-start">
        <div class="flex-shrink-0 w-8 h-8 bg-sky-100 rounded-full flex items-center justify-center mr-3">
          <span class="text-sm font-bold" style="color: var(--sky-blue);">3</span>
        </div>
        <div>
          <p class="font-medium">Stay Signed In</p>
          <p class="text-sm text-gray-600">You'll remain logged in for 30 days on this device</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Important Note -->
  <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <i class="fas fa-exclamation-triangle text-yellow-400"></i>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-yellow-800">Remember Your UPC Email</h3>
        <p class="text-sm text-yellow-700 mt-1">
          Save your UPC email address: <strong><%= registrationInfo.email %></strong><br>
          You'll need it every time you sign in.
        </p>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="text-center space-y-4">
    <a href="/" class="btn-primary inline-block">
      <i class="fas fa-home mr-2"></i>
      Go to Homepage
    </a>
    
    <div>
      <p class="text-sm text-gray-600 mb-2">Want to test your login?</p>
      <a href="/auth/logout" class="text-sky-blue hover:underline">Sign out and try logging in</a>
    </div>
  </div>
</div>